server {
    listen 80;
    server_name localhost;

    access_log <%= ENV['BOX_DIR'] %>/log/nginx-access.log;
    error_log <%= ENV['BOX_DIR'] %>/log/nginx-error.log;

    location / {
        include uwsgi_params;
        uwsgi_pass unix:///run/uwsgi/app/box/socket;
    }

    location /static {
        alias <%= ENV['BOX_DIR'] %>/www/static;
        expires 1y;
        add_header Cache-Control "public";
    }
}

