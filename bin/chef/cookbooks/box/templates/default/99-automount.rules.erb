###
# Automount rules
#
# Some devices exposes multiple interfaces, hence the use of GOTO to avoid
# multiple simultaneous connections to the same device.
#

#########
# BLOCK #
#########

# env DEVTYPE should be "disk" or "partition"

ACTION=="add",                        \
	SUBSYSTEMS=="usb",            \
	SUBSYSTEM=="block",           \
	KERNEL=="sd[a-h]*",           \
        GOTO="automount_rules_end",   \
	RUN+="<%= ENV['BOX_DIR'] %>/bin/dispatcher.sh '$env{DEVTYPE}' '$kernel' '$env{DEVPATH}'"




#########
# IFUSE #
#########

ACTION=="add",                        \
        ENV{ID_VENDOR}=="Apple_Inc.", \
        SUBSYSTEM=="usb",             \
        GOTO="automount_rules_end",   \
        RUN+="<%= ENV['BOX_DIR'] %>/bin/dispatcher.sh 'ifuse' '$env{ID_SERIAL_SHORT}' '$env{DEVPATH}'"




#######
# MTP #
#######

ACTION=="add",                      \
        ENV{ID_MTP_DEVICE}=="1",    \
        SUBSYSTEM=="usb",           \
        GOTO="automount_rules_end", \
        RUN+="<%= ENV['BOX_DIR'] %>/bin/dispatcher.sh 'mtp' '$env{BUSNUM}_$env{DEVNUM}' '$env{DEVPATH}'"




#######
# PTP #
#######

# env ID_GPHOTO2 == 1 set by /lib/udev/rules.d/60-libgphoto2-2.rules (unless set by the device itself)

ACTION=="add",                      \
	ENV{ID_GPHOTO2}=="1",       \
        SUBSYSTEM=="usb",           \
        GOTO="automount_rules_end", \
	RUN+="<%= ENV['BOX_DIR'] %>/bin/dispatcher.sh 'ptp' '$env{BUSNUM}_$env{DEVNUM}' '$env{DEVPATH}'"




LABEL="automount_rules_end"
